{% extends 'base.html.twig' %}

{% block body %}
<div class="App-form">

    <div class="App-form-login">
        <h3>Formulaire de connexion</h3>
        <form action="{{ path('Connexion') }}" method="POST">
            <div class="App-form-group">
                <input placeholder="email" type="text" id="username" required name="_username" value="{{ last_username }}" />
                <input placeholder="Mot de passe" required name="_password" type="password" class="app-form-login" />
            </div>
            <div class="App-form-group-validate">
                <button class="btns_plus" type="submit" >Se connecter</button>
            </div>
            <div class="App-form-group-remerber">
                <input type="checkbox" id="rememberMe" name="rememberMe" checked>
                <label for="rememberMe">Se souvenir de moi</label>
            </div>
        </form>
    </div>
</div>

{% endblock %}
